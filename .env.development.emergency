# EMERGENCY LOW-MEMORY CONFIGURATION
# Use this to prevent crashes during development

# Disable source maps to save memory
GENERATE_SOURCEMAP=false

# Reduce bundle analyzer memory usage
BUNDLE_ANALYZER=false

# Disable hot reloading to save memory
FAST_REFRESH=false

# Limit Node.js memory usage
NODE_OPTIONS=--max-old-space-size=1024

# Disable TypeScript checking in development
TSC_COMPILE_ON_ERROR=true
ESLINT_NO_DEV_ERRORS=true

# Reduce webpack memory usage
WEBPACK_DISABLE_POSTCSS=true

# Browser memory limits
BROWSER_ARGS=--memory-pressure-off --max_old_space_size=512
